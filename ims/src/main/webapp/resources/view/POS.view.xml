<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.vasudha.controller.POS"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:f="sap.ui.layout.form" 	xmlns:l="sap.ui.layout">
			<Page title="{i18n>pos}">
				<content>
					<VBox class="sapUiSmallMargin">
		<f:SimpleForm id="orderPosForm"
			maxContainerCols="2"
			labelSpanL="4"
			labelSpanM="4"
			emptySpanL="0"
			emptySpanM="0"
			columnsL="2"
			columnsM="2"
			editable="true"
			class="editableForm"
			layout="ResponsiveGridLayout" >
			<f:toolbar>
				<Toolbar id="TB1">
					<Title text="{i18n>pos}" level="H4" titleStyle="H4"/>
					<ToolbarSpacer />
					<Button icon="sap-icon://settings"/>
					<Button icon="sap-icon://drop-down-list" />
				</Toolbar>
			</f:toolbar>
			<f:content>
				<Toolbar>
					<Title text="{i18n>oderDetail}" level="H5" titleStyle="H5"/>
				</Toolbar>
				<Label text="Order Type" />
				<ComboBox
				items="{
					path: 'products>/materials'
				}">
				<core:Item key="{products>materialId}" text="{products>materialDesc}"  />
			</ComboBox>
				<Label text="Region" />
				<ComboBox
				items="{
					path: '/ProductCollection',
					sorter: { path: 'Name' }
				}">
				<core:Item key="{ProductId}" text="{Name}" />
			</ComboBox>
				<Label text="Phone Number" />
				<Input value="{Street}" type="Tel">
				</Input>
			
				<Toolbar>
					<Title text="Add Items" level="H5" titleStyle="H5"/>
					<ToolbarSpacer />
					<Button icon="sap-icon://add"/>
				</Toolbar>
				<Label text="Product Category" />
				<ComboBox
				items="{
					path: '/ProductCollection',
					sorter: { path: 'Name' }
				}">
				<core:Item key="{ProductId}" text="{Name}" />
			</ComboBox>
				<Label text="Product" />
				<ComboBox
				items="{
					path: '/ProductCollection',
					sorter: { path: 'Name' }
				}">
				<core:Item key="{ProductId}" text="{Name}" />
			</ComboBox>
				<Label text="Quantity" />
				<Input value="{Twitter}" type = "Number"/>
			</f:content>
		</f:SimpleForm>
		<Table id="orderItemTable"
			
				items="{ 
					path: 'stock>/stock',
					sorter : {
            			path : 'regionId',
            			group : true
        			}
				}" 
				columns="{
					path: 'columns>/' 
				}">
				<headerToolbar>
					<Toolbar>
						<Title text="{i18n>products}" level="H2"/>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column styleClass="{columns>styleClass}" demandPopin="{columns>demandPopin}" minScreenWidth="{columns>minScreenWidth}"
						popinDisplay="WithoutHeader">
						<Text text="{columns>header}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem vAlign="Middle" type="Navigation">
						<cells>
							
							<ObjectIdentifier
								title="{stock>materialDesc}"
								text="{stock>materialId}" />
						
							<Text text="{stock>regionId}" wrapping="false"/>
							<Text text="{stock>total}" wrapping="false"/>
								<Text text="{stock>total}" wrapping="false"/>
							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
	</VBox>
					
				</content>
				<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button  text="Create Order" tooltip="Create Order" press="addProductHandler"/>
			</Toolbar>
		</footer>
			</Page>
</mvc:View>