<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.vasudha.controller.Orders"
	xmlns:html="http://www.w3.org/1999/xhtml">
			<Page title="Orders" showNavButton="true"
	navButtonPress = "navack">
				<content>
					
					<IconTabBar
		id="idIconTabBar"
		select="handleIconTabBarSelect"
		class="sapUiResponsiveContentPadding">
		<items>
			<IconTabFilter
				showAll="true"
				count="{/ProductCollectionStats/Counts/Total}"
				text="All Products"
				key="All" />
			<IconTabSeparator />
			<IconTabFilter
				icon="sap-icon://begin"
				iconColor="Positive"
				count="{/ProductCollectionStats/Counts/Weight/Ok}"
				text="Ok"
				key="Ok" />
			<IconTabFilter
				icon="sap-icon://compare"
				iconColor="Critical"
				count="{/ProductCollectionStats/Counts/Weight/Heavy}"
				text="Heavy"
				key="Heavy" />
			<IconTabFilter
				icon="sap-icon://inventory"
				iconColor="Negative"
				count="{/ProductCollectionStats/Counts/Weight/Overweight}"
				text="Overweight"
				key="Overweight" />
				
		</items>
	</IconTabBar>
			<Table id="adminOrderTable"
			
				items="{ 
					path: 'orders>/orders',
					sorter : {
            			path : 'orderDate'
        			}
				}" 
				columns="{
					path: 'columns>/' 
				}"
				itemPress="onRowClick">
				<headerToolbar>
					<Toolbar>
						<Title text="{i18n>Orders}" level="H2"/>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column styleClass="{columns>styleClass}" demandPopin="{columns>demandPopin}" minScreenWidth="{columns>minScreenWidth}"
						popinDisplay="WithoutHeader">
						<Text text="{columns>header}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem vAlign="Middle" type="Navigation">
						<cells>
							
								<Text text="{orders>orderId}" wrapping="false"/>
						
							<ComboBox
				showSecondaryValues= "true"
				selectedKey = "{orders>orderRegion}"
				editable = "false"
				items="{
					path: 'regions>/',
					sorter: { path: 'regionName' }
				}">
					<core:ListItem key="{regions>regionId}" text="{regions>regionName}" />
			</ComboBox>	
							<ComboBox selectedKey="{orders>orderType}" 
							editable = "false"
							items="{
					path: 'orderType>/'
				}">
							<core:ListItem key="{orderType>orderTypeId}" text="{orderType>orderTypeDesc}" />
						</ComboBox>
							<ComboBox selectedKey="{orders>orderStatus}"
							editable = "false"
							items="{
					path: 'status>/',
					sorter: { path: 'status' }
				}">
							<core:ListItem key="{status>statusId}" text="{status>status}" />
						</ComboBox>
							<Text text="{
				path: 'orders>orderDate',
				type: 'sap.ui.model.type.Date',
				formatOptions: {
					style: 'medium',
					source: {
						pattern: 'yyyy-MM-dd'
					}
				}
			}" />
							<Text text="{orders>netValue}" wrapping="false"/>
							<Text text="{orders>orderItems}" wrapping="false"/>
							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
				</content>
			</Page>
</mvc:View>